<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".Registro">

    <ImageView
        android:id="@+id/logoPrincipal"
        android:layout_width="235dp"
        android:layout_height="105dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="94dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="84dp"
        app:srcCompat="@drawable/logodado" />

    <TextView
        android:id="@+id/nombreApp"
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        android:layout_below="@+id/logoPrincipal"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="134dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="125dp"
        android:contentDescription="texto app"
        android:fontFamily="@font/fredoka_nomral"
        android:gravity="center|center_vertical"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/Usuario"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nombreApp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="89dp"
        android:ems="10"
        android:hint="@string/email"
        android:inputType="textPersonName"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/Contraseña"
        android:layout_width="222dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Usuario"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="90dp"
        android:ems="10"
        android:hint="@string/contraseña"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:visibility="visible"
        tools:visibility="visible" />

    <Button
        android:id="@+id/acceso"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Contraseña"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="91dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="88dp"
        android:background="@drawable/button_rounder"
        android:fontFamily="@font/fredoka_nomral"
        android:onClick="acceso"
        android:text="@string/Acceso"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnPlay"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/acceso"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="89dp"
        android:background="@drawable/button_rounder"
        android:fontFamily="@font/fredoka_nomral"
        android:onClick="play"
        android:text="@string/play"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="79dp"
        android:layout_below="@+id/btnPlay"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="87dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="92dp"
        android:fontFamily="@font/fredoka_nomral"
        android:gravity="center|center_horizontal|center_vertical"
        android:onClick="registro"
        android:text="@string/Registrar"
        android:textColor="#2196F3"
        android:textSize="20sp" />

</RelativeLayout>